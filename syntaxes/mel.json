{
  "scopeName": "source.mel",
  "name": "MelScript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mel",
          "match": "//.*$"
        },
        {
          "name": "comment.block.mel",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mel",
          "begin": "\"",
          "end": "\"",
          "patterns": [{ "name": "constant.character.escape.mel", "match": "\\\\." }]
        },
        {
          "name": "string.quoted.single.mel",
          "begin": "'",
          "end": "'",
          "patterns": [{ "name": "constant.character.escape.mel", "match": "\\\\." }]
        },
        {
          "name": "string.template.mel",
          "begin": "`",
          "end": "`",
          "patterns": [
            { "name": "constant.character.escape.mel", "match": "\\\\." },
            { "name": "entity.name.tag.mel", "match": "\\$\\{[^}]+\\}" }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mel",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch|throw|new|import|export|from|await|async)\\b"
        },
        {
          "name": "storage.type.mel",
          "match": "\\b(var|val|fun|class|extends|super|this|function|const|let)\\b"
        },
        {
          "name": "keyword.operator.new.mel",
          "match": "\\bnew\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.mel",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.language.mel",
          "match": "\\b(true|false|null|undefined|NaN)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.console.mel",
          "match": "\\b(print|println|console\\.(log|warn|error|info))\\b"
        },
        {
          "match": "\\b(fun)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.function.mel" },
            "2": { "name": "entity.name.function.mel" }
          }
        },
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "name": "entity.name.function.call.mel"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.mel",
          "match": "\\+|\\-|\\*|\\/|%|\\=|\\=\\=|\\!\\=|\\<|\\>|\\<\\=|\\>\\=|\\&\\&|\\|\\||\\!|\\+\\+|\\-\\-"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.mel",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}